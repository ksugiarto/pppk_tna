<div class="row">
  <div class="col-md-2">
    <%= link_to checked_event_event_participants_path(@event), :class => "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'previous' %>
    <% end %>
  </div>
  
  <div class="col-md-8">
    <h4 align="center"><%= "#{t 'add'} #{t 'event_participant.event_participant'} - #{t 'step'} 4 (#{t 'event_participant.checked_email'})" %></h4>
  </div>

  <div class="col-md-2" align="right">
    <%= link_to @event, :class => "btn btn-default btn-sm" do %>
    	<%= t 'finish' %>&nbsp;<span class="glyphicon glyphicon-chevron-right"></span>
    <% end %>
  </div>
</div>

<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
          <b>FILTER</b>
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse">
      <div class="panel-body">
        <%=# render 'filter/curicculum' 
        %>
      </div>
    </div>
  </div>
</div>

<div id="checked_email"><%= render 'checked_email' %></div>
<div class="text-center">
  <%= link_to send_invitation_event_event_participants_path(@event), :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-envelope"></span>&nbsp;<%= t 'send_email' %>
  <% end %>
</div>
<hr>

<div id="checked_no_email"><%= render 'checked_no_email' %></div>
<div class="text-center">
  <%= link_to print_invitation_event_event_participants_path(@event, :format => "pdf"), :target => "_blank", :id => "btn", :class => "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-print"></span>&nbsp;<%= t 'print' %>
  <% end %>
</div>

<div id="modal"></div>

<!-- Modal -->
<div id="general_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="BranchModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="width:900px;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 class="modal-title"></h3>
      </div>
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>