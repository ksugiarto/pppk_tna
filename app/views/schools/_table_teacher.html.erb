<table class="table table-condensed">
  <tr style="background-color:#708DC6;">
    <th><%= t 'teacher.nip' %></th>
    <th><%= t 'teacher.name' %></th>
    <th><%= t 'teacher.born_date' %></th>
    <th><%= t 'teacher.gender' %></th>
    <th><%= t 'teacher.address' %></th>
    <th><%= t 'teacher.start_teach' %></th>
    <th width="200"></th>
  </tr>

<% @school.teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.nip %></td>
    <td><%= "#{teacher.front_title} #{teacher.first_name} #{teacher.last_name}, #{teacher.end_title}" %></td>
    <td><%= "#{teacher.born_place}, #{teacher.born_date}" %></td>
    <td><%= teacher.gender_name %></td>
    <td><%= "#{teacher.address}, #{teacher.city.try(:name)}" %></td>
    <td><%= teacher.start_teach %></td>
    <% if @modal.to_i==0 %>
    <td class="text-center">
        <%= link_to "#{t 'show'}", teacher_path(teacher, :modal => 1), :class => "btn btn-info btn-xs", :remote => true %>
        <% if can? :update, Teacher %>
            <%= link_to "#{t 'edit'}", teacher_path(teacher, :modal => 0), :class => "btn btn-warning btn-xs" %>
        <% end %>
    </td>
    <% end %>
  </tr>
<% end %>
</table>