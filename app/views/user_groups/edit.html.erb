<div class="row">
  <div class="col-md-2">
    <%= link_to user_groups_path, :class => "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'cancel' %>
    <% end %>
  </div>
  
  <div class="col-md-8">
    <h4 align="center"><%= t 'user_group.user_group' %> - <%= t 'edit' %></h4>
