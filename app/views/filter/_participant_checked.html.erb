<%= form_tag participant_checked_filter_index_path, :method => "get", :class => "form-horizontal", :remote => true do %>
<div class="form-group">
	<div class="col-sm-4">
	  <%= text_field_tag 'nip','', :placeholder => "#{t 'search'} #{t 'teacher.nip'}", :class => "form-control" %>
	</div>
	<div class="col-sm-6">
	  <%= text_field_tag 'name','', :placeholder => "#{t 'search'} #{t 'teacher.name'}", :class => "form-control" %>
	</div>
	<div class="col-sm-2">
		<%= hidden_field_tag 'event_id', @event.id %>
	  <%= submit_tag "#{t 'process'}", :disable_with => "#{t 'disable_with'}", :class => "btn btn-success" %>
	</div>
</div>
<% end %>