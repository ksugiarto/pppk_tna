<%= form_for([@school, @school_request, @request_participant], :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @request_participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request_participant.errors.count, "error") %> prohibited this request_participant from being saved:</h2>

      <ul>
      <% @request_participant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :teacher, "#{t 'school.teacher'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:teacher_id, @teachers.collect {|teacher| ["#{teacher.first_name} #{teacher.last_name}", teacher.id,]}, {:prompt => "#{t 'prompt'} #{t 'school.teacher'}"}, :class => "form-control") %></div>
  </div>
  <div class="form-group">
    <%= f.label :notes, "#{t 'school.notes'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_area :notes, :rows => 3, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-6"><%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
