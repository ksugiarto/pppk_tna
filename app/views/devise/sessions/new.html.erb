<div class="row form">
  <div class="col-md-4"></div>
  <div class="col-md-4 login">
    <h3 class="login"><div align="center"><%= company_name %></div></h3>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :username, "#{t 'user.username'}" %>
        <%= f.text_field :username, :autofocus => true, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "#{t 'user.password'}" %>
        <%= f.password_field :password, :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <label class="checkbox inline">
          <div class="controls">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </label>
      <% end -%>

      <hr>
      <div class="form-group">
        <%= f.submit "#{(t 'login').upcase}", :class => "btn btn-large btn-block btn-primary" %>
      </div>
    <% end %>

    <div align="center"><%= render "devise/shared/links" %></div>
  </div>
  <div class="span4"></div>
</div>
