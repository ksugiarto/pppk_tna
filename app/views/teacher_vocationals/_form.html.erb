<%= form_for([@teacher, @teacher_vocational], :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @teacher_vocational.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher_vocational.errors.count, "error") %> prohibited this teacher_vocational from being saved:</h2>

      <ul>
      <% @teacher_vocational.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :vocational, "#{t 'school.vocational'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:vocational_id, @vocationals.collect {|vocational| ["#{vocational.name}-#{vocational.class_for}", vocational.id,]}, {:prompt => "#{t 'prompt'} #{t 'school.vocational'}"}, :class => "form-control", :required => true) %></div>
  </div>
  <div class="form-group">
    <%= f.label :notes, "#{t 'school.notes'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_area :notes, :rows => 3, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"><%= f.hidden_field :is_competent, :value => 0 %></div>
    <div class="col-sm-6"><%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
