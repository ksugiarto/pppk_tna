<div class="row">
  <div class="col-md-2">
    <%= link_to import_schools_path, :class => "btn btn-success btn-sm", :remote => true do %>
      <span class="glyphicon glyphicon-open"></span>&nbsp;<%= t 'import_excel' %>
    <% end %>
  </div>
  
  <div class="col-md-8">
    <h4 align="center"><%= t 'school.schools' %></h4>
  </div>

  <div class="col-md-2" align="right">
    <%= link_to new_school_path, :class => "btn btn-default btn-sm", :remote => true do %>
