<%= form_for(@city, :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

      <ul>
      <% @city.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :country, "#{t 'city.country'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:country_id, @countries.collect {|country| [country.name, country.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.country'}"}, {:class => "form-control"}) %></div>
  </div>
  <div class="form-group">
    <%= f.label :province, "#{t 'city.province'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:province_id, @provinces.collect {|province| [province.name, province.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.province'}"}, :class => "form-control") %></div>
  </div>
  <div class="form-group">
    <%= f.label :name, "#{t 'city.name'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :name, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :city_ext, "#{t 'city.city_ext'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :city_ext, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-6"><%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
