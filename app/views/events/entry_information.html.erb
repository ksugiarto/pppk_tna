<%= form_for(@event, :html => { :class => "form-horizontal" }) do |f| %>
  <div class="row">
    <div class="col-md-2">
      <%= link_to pick_vocational_event_path(@event), :class => "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'previous' %>
      <% end %>
    </div>
    
    <div class="col-md-8">
      <h4 align="center"><%= "#{t 'new'} #{t 'event.event'} - #{t 'step'} 4 (#{t 'event.entry_information'})" %></h4>
    </div>

    <div class="col-md-2" align="right">
      <%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, "#{t 'event.name'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :name, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :description, "#{t 'event.description'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_area :description, :rows => 3, :class => "form-control" %></div>
  </div>
<% end %>
