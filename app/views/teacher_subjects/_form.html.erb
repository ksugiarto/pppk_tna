<%= form_for([@teacher, @teacher_subject], :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @teacher_subject.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher_subject.errors.count, "error") %> prohibited this teacher_subject from being saved:</h2>

      <ul>
      <% @teacher_subject.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :subject, "#{t 'subject.subject'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.select(:subject_id, @subjects.collect {|subject| [subject.name, subject.id,]}, {:prompt => "#{t 'prompt'} #{t 'subject.subject'}"}, :class => "form-control", :required => true) %></div>
  </div>
  <div class="form-group">
    <%= f.label :is_competent, "#{t 'teacher.is_competent'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.number_field :is_competent %></div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
