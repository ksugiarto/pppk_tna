<!DOCTYPE html>
<html>
<head>
  <title>PPPK-TNA</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default" role="navigation" id="show">
		<div class="container">
		  <div class="row">
			  <!-- Brand and toggle get grouped for better mobile display -->
			  <div class="navbar-header">
			    <a class="navbar-brand" href="/">
			    	<%= company_name %>
			    </a>
			  </div>

			  <!-- Collect the nav links, forms, and other content for toggling -->
			  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			    <ul class="nav navbar-nav">
			    	<li><a href="/events"><%= t 'event.events' %></a></li>
            <li><a href="/teachers"><%= t 'teacher.teachers' %></a></li>
            <li><a href="/schools"><%= t 'school.schools' %></a></li>
            <li><a href="/curicculums"><%= t 'curicculum.curicculums' %></a></li>
            <li><a href="/cities"><%= t 'city.cities' %></a></li>
            <!-- 
			    	<li class="dropdown">
		          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Setting <span class="caret"></span></a>
		          <ul class="dropdown-menu" role="menu">
		            <li><a href="/countries"><%= t 'country.countries' %></a></li>
		            <li><a href="/provinces"><%= t 'province.provinces' %></a></li>
		          </ul>
		        </li>
             -->
			    </ul>
				  <p class="navbar-text navbar-right">
				  	Log Out
				  </p>
			  </div><!-- /.navbar-collapse -->
			</div>
		</div>
	</nav>

	<div class="container">
	  <div class="row">
	  	<% if notice %>
			  <p id="show" class="alert alert-success"><%= notice %></p>
			<% end %>
			<% if alert %>
			  <p id="show" class="alert alert-danger"><%= alert %></p>
			<% end %>
	  	
		  <%= yield %>
	  </div>
	</div>
</body>
</html>
