<div class="row">
  <div class="col-md-3">
    <% if @event.present? %>
    	<%= link_to @event, method: :delete, data: { confirm: "#{t 'confirm'}" }, :class => "btn btn-danger btn-sm" do %>
    		<span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'cancel' %>
    	<% end %>
    <% else %>
      <%= link_to events_path, data: { confirm: "#{t 'confirm'}" }, :class => "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'cancel' %>
      <% end %>
    <% end %>
  </div>
  
  <div class="col-md-6">
    <h4 align="center"><%= "#{t 'new'} #{t 'event.event'} - #{t 'step'} 1 (#{t 'event.check_request'})" %></h4>
  </div>

  <div class="col-md-3" align="right">
    <%= link_to check_request_next_events_path(:id => @event_id), :class => "btn btn-default btn-sm" do %>
    	<%= "#{t 'go_to'} 2" %>&nbsp;<span class="glyphicon glyphicon-chevron-right"></span>
    <% end %>
  </div>
</div>

<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
          <b>FILTER</b>
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse">
      <div class="panel-body">
        <%= render 'filter/event_check_request' %>
      </div>
    </div>
  </div>
</div>

<div id="check_request"><%= render 'check_request' %></div>

