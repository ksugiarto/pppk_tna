<%= will_paginate @events, :class => "apple_pagination" %>

<table class="table table-condensed">
  <tr style="background-color:#708DC6;">
    <th><%= t 'event.title' %></th>
    <th><%= t 'event.vocational' %></th>
    <th><%= t 'event.date_start' %></th>
    <th><%= t 'event.date_end' %></th>
    <th>Status</th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.vocational.try(:name) %></td>
    <td><%= date(event.date_start) %></td>
    <td><%= date(event.date_end) %></td>
    <td><%= event.status %></td>
    <td class="text-right">
    <% if event.status.to_i==0 %>
        <%= link_to "#{t 'show'}", event, :class => "btn btn-info btn-xs" %>
        <%= link_to "#{t 'edit'}", edit_event_path(event), :class => "btn btn-warning btn-xs" %>
        <%= link_to "#{t 'destroy'}", event, method: :delete, data: { confirm: "#{t 'confirm'}" }, :class => "btn btn-danger btn-xs" %>
    <% elsif event.status.to_i==1 %>
        <%= link_to "#{t 'show'}", event, :class => "btn btn-info btn-xs" %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<%= will_paginate @events, :class => "apple_pagination" %>