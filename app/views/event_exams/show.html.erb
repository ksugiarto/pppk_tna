<div class="row">
  <div class="col-md-2">
    <%= link_to @event, :class => "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;<%= t 'back' %>
    <% end %>
  </div>
  
  <div class="col-md-8">
    <h4 align="center"><%= t 'event.event' %> - <%= t 'event_exam.event_exam' %> - <%= t 'detail' %></h4>
  </div>

  <div class="col-md-2" align="right">
  </div>
</div>

<p>
  <b>Event:</b>
  <%= @event_exam.event.try(:title) %>
</p>

<p>
  <b>Description:</b>
  <%= @event_exam.description %>
</p>

<p>
  <b>Exam type:</b>
  <%= @event_exam.exam_type %>
</p>

