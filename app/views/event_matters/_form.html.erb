<%= form_for([@event, @event_matter], :html => { :class => "form-horizontal" }, :multipart => true, :remote => true) do |f| %>
  <% if @event_matter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_matter.errors.count, "error") %> prohibited this event_matter from being saved:</h2>

      <ul>
      <% @event_matter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :document, "#{t 'event_matter.document'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6">
      <%= f.file_field :document, :class => "form-control" %>
      <p class="help-block">Upload materi diklat dalam format: *.doc, *.docx, *.pdf</p>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :notes, "#{t 'event_matter.notes'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_area :notes, :rows => 3, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-6"><%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
