<%= form_for([@school, @school_request], :html => { :class => "form-horizontal" }, :remote => true) do |f| %>
  <% if @school_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@school_request.errors.count, "error") %> prohibited this school_request from being saved:</h2>

      <ul>
      <% @school_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :references_number, "#{t 'school.reference_number'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :references_number, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :request_date, "#{t 'school.request_date'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_field :request_date, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :notes, "#{t 'school.notes'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-6"><%= f.text_area :notes, :rows => 3, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-6"><%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
