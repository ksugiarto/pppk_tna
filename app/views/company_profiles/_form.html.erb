<%= form_for(@company_profile, :html => { :class => "form-horizontal", :multipart => true }) do |f| %>
  <% if @company_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company_profile.errors.count, "error") %> prohibited this company_profile from being saved:</h2>

      <ul>
      <% @company_profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "#{t 'company.name'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-4"><%= f.text_field :name, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :full_name, "#{t 'company.full_name'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-4"><%= f.text_field :full_name, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :address, "#{t 'company.address'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-4"><%= f.text_field :address, :required => true, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :city, "#{t 'company.city'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-4"><%= f.select(:city_id, @cities.collect {|city| [city.name, city.id,]}, {:prompt => "#{t 'prompt'} #{t 'city.city'}"}, :class => "form-control") %></div>
  </div>
  <div class="form-group">
    <%= label_tag :logo, "#{t 'company.logo'}", :class => "col-sm-4 control-label" %>
    <div class="col-sm-4"><%= f.file_field :logo, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-4"><%= f.submit "#{t 'submit'}", :class => "btn btn-success", :disable_with => "#{t 'disable_with'}" %></div>
  </div>
<% end %>
